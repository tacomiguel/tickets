<%= form_with(model: ticket_priority, local: true, id: 'js-form-ticket-priority') do |form| %>
  <div class="form-group row mb-3">
    <%= form.label :name, class: 'col-form-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :color, class: 'col-form-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.text_field :color, class: 'form-control js-picker-color' %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :priority, class: 'col-form-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.number_field :priority, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :alerthours, class: 'col-form-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.number_field :alerthours, class: 'form-control' %>
    </div>
  </div>

  <div class="row justify-content-end">
    <div class="col-lg-10">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
