<% content_for :breadcrumb do %>
  <div class="row">
    <div class="col-12">
      <div class="page-title-box d-flex align-items-center justify-content-between">
        <h4 class="mb-0 font-size-18">Departamentos</h4>

        <div class="page-title-right">
          <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a href="javascript: void(0);">Menu</a></li>
            <li class="breadcrumb-item active">Departamentos</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
<% end %>


<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title mb-4">Departamentos</h4>

        <div class="row mb-2">
          <div class="col-sm-4">
            <%= form_tag departaments_path, method: :get do %>
              <div class="search-box mr-2 mb-2 d-inline-block">
                <div class="position-relative">
                  <input type="text" class="form-control" name="search" placeholder="Buscar..." value="<%= @search %>">
                  <i class="bx bx-search-alt search-icon"></i>
                </div>
              </div>
            <% end %>
          </div>
          <div class="col-sm-8">
            <div class="text-sm-right">
              <%= link_to new_departament_path, class: 'btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2' do %>
                <i class="mdi mdi-plus mr-1"></i> Nuevo departamento
              <% end %>
            </div>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-centered table-hover table-nowrap mb-0">
            <thead class="thead-light">
              <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Registrado</th>
                <th>Modificado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @departaments.each do |departament| %>
                <tr>
                  <td>
                    <%= link_to departament, class: 'text-body font-weight-bold' do %>
                      #<%= departament.id %>
                    <% end %>
                  </td>
                  <td><%= departament.name %></td>
                  <td><%= departament.created_at.strftime('%d/%m/%Y %I:%M %p') %></td>
                  <td><%= departament.updated_at.strftime('%d/%m/%Y %I:%M %p') %></td>
                  <td>
                    <%= link_to departament, class: 'mr-3 text-success', title: 'Ver' do %>
                      <i class="mdi mdi-eye-outline font-size-18"></i>
                    <% end %>
                    <%= link_to edit_departament_path(departament), class: 'mr-3 text-primary', title: 'Editar' do %>
                      <i class="mdi mdi-pencil font-size-18"></i>
                    <% end %>
                    <%= link_to departament, class: 'text-danger', title: 'Eliminar', method: :delete, data: { confirm: 'Estas seguro que deseas eliminar?' } do %>
                      <i class="mdi mdi-close font-size-18"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- end table-responsive -->

        <div class="d-flex justify-content-end pt-3">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>
