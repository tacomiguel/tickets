
<body class="h-100 bg-primary">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-sm-8 align-self-center text-center">
                <div class="card shadow">
                    <div class="card-body">  
                     <div class="container text-center h-100 bg-info d-flex justify-content-center align-items-center">
                      <h1 class="m-5">LISTAR ENCUESTA </h1>   
                    </div> 
                     <%p=[],d=[],i=0 %>
                     <%@question.each do |q|%>
                        <% d[i]= q.id%>
                        <% p[i]= q.name%>
                        <%i+=1%>
                     <%end%>
          
                     <%@ticketquestion.each do |q|%>
                                           
                      <div class="alert alert-primary" role="alert">
                        <h2 class="card-title"><%=p[0]%></h2>
                        <h2 class="card-title"> Respuesta : <%=q.rb_1 %></h2>
                      </div>

                      <div class="alert alert-danger" role="alert">
                        <h2 class="card-title"><%=p[1]%></h2>
                        <h2 class="card-title"> Respuesta : <%=q.rb_2 %></h2>
                      </div>

                      <div class="alert alert-primary" role="alert">
                        <h2 class="card-title"><%=p[2]%></h2>
                        <h2 class="card-title"> Respuesta : <%=q.rb_3 %></h2>
                      </div>

                      <div class="alert alert-danger" role="alert">
                        <h2 class="card-title"><%=p[3]%></h2>
                        <h2 class="card-title"> Respuesta : <%=q.rb_4 %></h2>
                      </div>

                      <div class="alert alert-danger" role="alert">
                        <h2 class="card-title"><%=p[4]%></h2>
                        <h2 class="card-title"> Respuesta : <%=q.tx_1 %></h2>
                      </div>

                      <% end %>       
     
                    </div>
                </div>
            </div>
        </div>
    </div>  
</body>

    
