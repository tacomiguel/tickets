<% content_for :breadcrumb do %>
  <div class="row">
    <div class="col-12">
      <div class="page-title-box d-flex align-items-center justify-content-between">
        <h4 class="mb-0 font-size-18">Usuario Finales</h4>

        <div class="page-title-right">
          <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a href="<%= clients_path %>">Usuario Finales</a></li>
            <li class="breadcrumb-item active"><%= @client.name %></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
<% end %>


<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title mb-3">Detalle Usuario</h4>
        <hr>

        <div class="row">
          <div class="col-lg-6">
            <table class="table table-details mb-0">
              <tbody>
                <tr>
                  <th scope="row" style="width: 150px;">Nombre:</th>
                  <td><%= @client.name || '-' %></td>
                </tr>
                <tr>
                  <th scope="row">Email:</th>
                  <td><%= @client.email || '-' %></td>
                </tr>
                <tr>
                  <th scope="row">Teléfono:</th>
                  <td><%= @client.phone || '-' %></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="col-lg-6">
            <table class="table table-details mb-0">
              <tbody>
                </tr>
                  <th scope="row" style="width: 150px;">Tipo usuario:</th>
                  <td><%= Client.translate_enum_name(:client_type, @client.client_type) %></td>
                </tr>
                <tr>
                  <th scope="row">Registrado:</th>
                  <td><%= @client.created_at.strftime('%d/%m/%Y %I:%M %p') %></td>
                </tr>
                <tr>
                  <th scope="row">Actualizado:</th>
                  <td><%= @client.updated_at.strftime('%d/%m/%Y %I:%M %p') %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<%= link_to 'Editar', edit_client_path(@client) %> |
<%= link_to 'Atrás', clients_path %>
