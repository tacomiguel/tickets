<%= form_with(model: client, local: true) do |form| %>
  <div class="form-group row mb-3">
    <%= form.label :name, class: 'col-form-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :email, class: 'col-form-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :phone, class: 'col-form-label col-lg-2' %>
    <div class="col-lg-10">
      <%= form.text_field :phone, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :client_type, class: 'col-form-label col-lg-2' %>
    <div class="col-lg-10">
      <div class="custom-control custom-radio custom-radio-primary mr-3">
        <%= form.radio_button :client_type, 'client', checked: client.client_type == 'client', class: 'custom-control-input' %>
        <%= form.label :client_type_client, Client.translate_enum_name(:client_type, :client), class: 'custom-control-label' %>
      </div>

      <div class="custom-control custom-radio custom-radio-primary">
        <%= form.radio_button :client_type, 'user', checked: client.client_type == 'user', class: 'custom-control-input' %>
        <%= form.label :client_type_user, Client.translate_enum_name(:client_type, :user), class: 'custom-control-label' %>
      </div>
    </div>
  </div>

  <div class="row justify-content-end">
    <div class="col-lg-10">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
