<% content_for :title, "Geosatelital - Login" %>
 
<div class="card overflow-hidden">
  <div class="bg-soft-primary">
    <div class="row">
      <div class="col-7">
        <div class="text-primary p-4">
          <h5 class="text-primary">¡Bienvenido!</h5>
          <p>Tickets</p>
        </div>
      </div>
      <div class="col-5 align-self-end">
        <img src="https://cdn1.geolabs.pw/images/profile-img.png" alt="" class="img-fluid" />
      </div>
    </div>
  </div>
 
  <div class="card-body pt-0">
    <div>
      <a href="" onclick="return false;">
        <div class="avatar-md profile-user-wid mb-4">
          <span class="avatar-title rounded-circle bg-light">
            <img src="https://cdn1.geolabs.pw/images/logo.svg" alt="" class="rounded-circle" height="34" />
          </span>
        </div>
      </a>
    </div>
 
    <% if alert %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>
 
    <div class="p-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
        <div class="form-group">
          <%= f.label :email, 'Correo eléctronico' %> <%= f.email_field :email,
            class: 'form-control', autofocus: true, autocomplete: "email",
            placeholder: "Ingrese correo electrónico" %>
        </div>
 
        <div class="form-group">
          <%= f.label :password, 'Contraseña' %> <%= f.password_field :password,
            class: 'form-control', autocomplete: "current-password", placeholder:
            "Ingrese contraseña" %>
        </div>
 
        <% if false %>
          <div class="custom-control custom-checkbox">
            <%= f.check_box :remember_me, class: 'custom-control-input' %> <%=
                f.label :remember_me, 'Recordarme', class: 'custom-control-label' %>
          </div>
        <% end %>
 
        <div class="mt-3">
          <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">
            Iniciar sesión
          </button>
        </div>
 
      <% end %>
    </div>
  </div>
</div>
